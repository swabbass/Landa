<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:measureWithLargestChild="true"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".CourseFragment" >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/courseAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="Description"
        android:scaleType="centerCrop"
        android:src="@drawable/akgebramatrix" />

    <ExpandableListView
        android:id="@+id/courseTeachers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/languageLable"
        android:dividerHeight="1dp" >
    </ExpandableListView>

    <TextView
        android:id="@+id/courseLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/courseAvatar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/courseAvatar"
        android:layout_marginRight="5dp"
        android:background="#33b5e5"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/courseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/courseLable"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/courseAvatar"
        android:layout_toRightOf="@+id/feedbackImg"
        android:text="TextView" />

    <ImageView
        android:id="@+id/feedbackImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Feedback"
        android:src="@drawable/feedback_icon" />

    <TextView
        android:id="@+id/languageLable"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/courseLable"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/teachers"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#33b5e5" />

</RelativeLayout>