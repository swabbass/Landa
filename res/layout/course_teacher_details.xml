<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/teacherCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tutorSmallAvatar"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#4b4949" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teacherFacultyLable"
        
        android:layout_below="@+id/courseDay"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/courseTimeTo"
        android:text="-"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/CourseTimeFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teacherFacultyLable"
        android:layout_below="@+id/courseDay"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/textView3"
        android:text="TextView"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/alaramMe"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/teacherCourseName"
        android:scaleType="fitCenter"
        android:src="@drawable/alarm" />

    <TextView
        android:id="@+id/CoursePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/alaramMe"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/CourseTimeFrom"
        android:layout_toRightOf="@+id/alaramMe"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/tutorSmallAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hamed" />

    <TextView
        android:id="@+id/teacherFacultyLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tutorSmallAvatar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tutorSmallAvatar"
        android:layout_marginRight="5dp"
        android:background="#33b5e5"
        android:gravity="center"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/courseTimeTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teacherFacultyLable"
        android:layout_alignRight="@+id/courseDay"
        android:layout_below="@+id/courseDay"
        android:layout_margin="2dp"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/courseDay"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/teacherCourseName"
        android:layout_alignTop="@+id/CoursePlace"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="12sp"
        android:textStyle="normal" />

</RelativeLayout>